<?xml version="1.0" encoding="utf-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="bootstrap.php"
        >

    <testsuites>
        <testsuite name="GrÃ©gory PLANCHAT's Event Manager - Unit tests">
            <directory>../tests/Test/Gplanchat/EventManager</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">../src/Gplanchat/EventManager</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="../build/coverage/html" charset="UTF-8" yui="true" highlight="false" lowUpperBound="40" highLowerBound="80"/>
    </logging>
</phpunit>
